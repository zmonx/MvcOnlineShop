<%- include('../includes/head.ejs') %> 
<%- include('../includes/menu.ejs') %>

<BR><BR><BR><BR>
      <div class="container mt-3">
            <h2>Products</h2>
            <p>Type something in the input field to search the table for product name:</p>
            <div class="row">
                <div class="col-md-10">
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                </div>
                <div class="col-md-2">
                    <a href="/insert" class="btn btn-primary btn-block"><i class="fa fa-plus" aria-hidden="true"></i> New Product</a>
                </div>
            </div>
            <br>
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <% if (prods.length > 0) { %>

                        <% prods.map((product, index) => { %>
                            <tr>
                                <td>
                                    <%- (index+1) %>
                                </td>
                                <td>
                                    <%- product.product_name%>
                                    
                                </td>
                                <td>
                                    <%- product.price%>
                                </td>
                                <td>
                                    <a href="<%- '/update/'+product._id%>" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                                    <a href="<%- '/delete/'+product._id%>" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger"> <i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4">
                                            <h1>No Products Found!</h1>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>


<BR><BR><BR><BR><BR><BR><BR><BR>

<%- include('../includes/end.ejs') %>