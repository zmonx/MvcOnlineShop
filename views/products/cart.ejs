<style>
    @import url('https://fonts.googleapis.com/css2?family=Mitr&display=swap');
    .newfont {
        font-family: 'Mitr', sans-serif;
    }
</style>
<%- include('../includes/head.ejs') %> <%- include('../includes/menu.ejs')%>

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>CART</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    <% let total = 0; let cartTotal =0; %>
                    <% if (prods.length > 0) { %> 
                        <% prods.map((cart, index) => { %>
                    <tr>
                        <td class="col-md-6">
                        <div class="media">
                            <a class="thumbnail pull-left" href="#"> <img class="media-object" src="<%- cart.img_path%>" style="width: 72px; height: 72px;"> </a>
                            <div class="media-body">
                                <h4 class="media-heading"><a href="#"><%- cart.product_name%></a></h4>
                  
                            </div>
                        </div></td>
                        <td class="col-md-1" style="text-align: center">
                        <input type="number" class="form-control" id="xx" value="<%- cart.quantity%>">
                        </td>
                        <td class="col-md-1 text-center"><strong id="price"> ฿ <%- cart.price%>  </strong></td>
                        <% cartTotal = parseInt(cart.price)%>
                        <% cartTotal = cartTotal * cart.quantity %>
                         
                        <% total = total+cartTotal %>
                        <td class="col-md-1 text-center"><strong>฿ <%= cartTotal %> </strong></td>
                        <td class="col-md-1">
                            <!-- <input type="hidden" value="<%- cart._id%>"> -->
                        <a href="<%- '/del/'+cart._id%>" type="button" class="btn btn-danger"  onclick="return confirm('Are you sure you want to delete this item?');"> Remove
                        </a></td>
                    </tr>
                 
                    <% }) %> 
                    <% } else   { %>
                        <h1>No Products in Cart!</h1>
                        <% } %>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong>฿ <%= total %></strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                        <button type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
                        </button></td>
                        <td>
                        <button type="button" class="btn btn-success">
                            Checkout <span class="glyphicon glyphicon-play"></span>
                        </button></td>
                    </tr>
                
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../includes/end.ejs') %>

